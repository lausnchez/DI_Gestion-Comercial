<Window x:Class="DI_Gestion_Comercial.vista.pantallas.PantallaNuevoProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DI_Gestion_Comercial.vista.pantallas"
        mc:Ignorable="d"
        Title="Agregar un nuevo producto" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="700" Width="600">
    <Window.Resources>
        <Style x:Key="labelStyleBasico" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#5926d1"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0,5,5,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Label Style="{DynamicResource labelStyleBasico}" Content="Nombre" HorizontalAlignment="Left" Margin="59,73,0,0" VerticalAlignment="Top" Width="226"/>
        <TextBox x:Name="txt_nombreAgregarProducto" HorizontalAlignment="Left" Margin="59,105,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="226"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Descripción" HorizontalAlignment="Left" Margin="59,204,0,0" VerticalAlignment="Top" Width="226"/>
        <TextBox x:Name="txt_descripcionAgregarProducto" HorizontalAlignment="Left" Margin="59,238,0,0" TextWrapping="Wrap" Text="Descripcion" VerticalAlignment="Top" Width="226" Height="200"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Precio" HorizontalAlignment="Left" Margin="318,73,0,0" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="txt_precioAgregarProducto" HorizontalAlignment="Left" Margin="318,104,0,0" TextWrapping="Wrap" Text="Precio" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Stock" HorizontalAlignment="Left" Margin="318,127,0,0" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="txt_stockAgregarProducto" HorizontalAlignment="Left" Margin="318,165,0,0" TextWrapping="Wrap" Text="Stock" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Formato" HorizontalAlignment="Left" Margin="318,195,0,0" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="txt_formatoAgregarProducto" HorizontalAlignment="Left" Margin="318,229,0,0" TextWrapping="Wrap" Text="Formato" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Fecha" HorizontalAlignment="Left" Margin="318,259,0,0" VerticalAlignment="Top" Width="223"/>
        <DatePicker x:Name="date_agregarProducto" HorizontalAlignment="Left" Margin="318,293,0,0" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Autor" HorizontalAlignment="Left" Margin="59,136,0,0" VerticalAlignment="Top" Width="226"/>
        <ComboBox x:Name="cb_autorAgregarProducto" HorizontalAlignment="Left" Margin="59,547,0,0" VerticalAlignment="Top" Width="226"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Proveedor" HorizontalAlignment="Left" Margin="59,443,0,0" VerticalAlignment="Top" Width="226"/>
        <ComboBox x:Name="cb_proveedorAgregarProducto" HorizontalAlignment="Left" Margin="59,473,0,0" VerticalAlignment="Top" Width="226"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Género" HorizontalAlignment="Left" Margin="59,513,0,0" VerticalAlignment="Top" Width="226"/>
        <ComboBox x:Name="cb_generoAgregarProducto" HorizontalAlignment="Left" Margin="59,170,0,0" VerticalAlignment="Top" Width="226"/>
        <Button x:Name="btn_agregarProducto" Content="Button" HorizontalAlignment="Center" Margin="0,615,0,0" VerticalAlignment="Top" Width="180"/>


        <Button x:Name="btn_seleccionarImagenAgregarProducto" Content="Button" HorizontalAlignment="Left" Margin="318,547,0,0" VerticalAlignment="Top" Width="223"/>
        <Image HorizontalAlignment="Left" Height="200" Margin="318,342,0,0" VerticalAlignment="Top" Width="223" Source="/vista/pantallas/VinylMePlease.jpg" Stretch="UniformToFill"/>

        <Label Style="{DynamicResource labelStyleBasico}" FontSize="20" FontFamily="Segoe UI Semibold" Content="Agregar un nuevo producto" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Width="483"/>



    </Grid>
</Window>
