<Window x:Class="DI_Gestion_Comercial.vista.pantallas.PantallaNuevoProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DI_Gestion_Comercial.vista.pantallas"
        mc:Ignorable="d"
        Title="Agregar un nuevo producto" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Height="700" Width="600">
    <Window.Resources>
        <Style x:Key="labelStyleBasico" TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#5926d1"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="0,5,5,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>

        <!--Style boton-->
        <Style x:Key="ButtonAgregarProducto" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="#5926d1"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontFamily" Value="Segoe UI Light"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" CornerRadius="15" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#8552ff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#FFA6D218"/>
                                <Setter Property="Foreground" Value="white"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="#3DE0BFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Nombre" HorizontalAlignment="Left" Margin="59,73,0,0" VerticalAlignment="Top" Width="226"/>
        <TextBox x:Name="txt_nombreAgregarProducto" HorizontalAlignment="Left" Margin="59,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Descripción" HorizontalAlignment="Left" Margin="59,204,0,0" VerticalAlignment="Top" Width="226"/>
        <TextBox x:Name="txt_descripcionAgregarProducto" HorizontalAlignment="Left" Margin="59,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" Height="141"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Precio" HorizontalAlignment="Left" Margin="318,73,0,0" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="txt_precioAgregarProducto" HorizontalAlignment="Left" Margin="318,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Stock" HorizontalAlignment="Left" Margin="318,143,0,0" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="txt_stockAgregarProducto" HorizontalAlignment="Left" Margin="318,181,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Formato" HorizontalAlignment="Left" Margin="318,211,0,0" VerticalAlignment="Top" Width="223"/>
        <TextBox x:Name="txt_formatoAgregarProducto" HorizontalAlignment="Left" Margin="318,245,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Fecha" HorizontalAlignment="Left" Margin="62,514,0,0" VerticalAlignment="Top" Width="223"/>
        <DatePicker 
           
            x:Name="date_agregarProducto" HorizontalAlignment="Left" Margin="62,548,0,0" VerticalAlignment="Top" Width="223"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Autor" HorizontalAlignment="Left" Margin="59,136,0,0" VerticalAlignment="Top" Width="226"/>
        <ComboBox x:Name="cb_generoAgregarProducto" HorizontalAlignment="Left" Margin="59,482,0,0" VerticalAlignment="Top" Width="226"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Proveedor" HorizontalAlignment="Left" Margin="59,384,0,0" VerticalAlignment="Top" Width="226"/>
        <ComboBox x:Name="cb_proveedorAgregarProducto" HorizontalAlignment="Left" Margin="59,414,0,0" VerticalAlignment="Top" Width="226"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Género" HorizontalAlignment="Left" Margin="59,448,0,0" VerticalAlignment="Top" Width="226"/>
        <ComboBox x:Name="cb_autorAgregarProducto" 
                  IsEditable="False"
                  HorizontalAlignment="Left" Margin="59,170,0,0" VerticalAlignment="Top" Width="226"/>
        <Button Content="Agregar producto" Height="30" Style="{DynamicResource ButtonAgregarProducto}" x:Name="btn_agregarProducto" HorizontalAlignment="Center" Margin="0,615,0,0" VerticalAlignment="Top" Width="275" Click="btn_agregarProducto_Click"/>

        <Label Style="{DynamicResource labelStyleBasico}" Content="Imagen" HorizontalAlignment="Left" Margin="318,277,0,0" VerticalAlignment="Top" Width="224"/>
        <Button x:Name="btn_seleccionarImagenAgregarProducto"
                Content="Agregar imagen" 
                Style="{DynamicResource ButtonAgregarProducto}" 
                HorizontalAlignment="Left" 
                Margin="318,548,0,0" 
                VerticalAlignment="Top" 
                Width="223" 
                
                Click="btn_seleccionarImagenAgregarProducto_Click"/>
        <Image x:Name="img_agregarProducto" 
               HorizontalAlignment="Left" 
               Height="223" 
               Margin="318,316,0,0" 
               VerticalAlignment="Top" Width="224" Source="/vista/imagenes/vinyl_background.jpg" Stretch="UniformToFill"/>

        <Label Style="{DynamicResource labelStyleBasico}" FontSize="20" FontFamily="Segoe UI Semibold" Content="Agregar un nuevo producto" HorizontalAlignment="Center" Margin="0,22,0,0" VerticalAlignment="Top" Width="483"/>



    </Grid>
</Window>
